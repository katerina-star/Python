def func(x, y):
    result = x ** y
    return result


print(func(x=float(input('Введите действительное положительное число: ')),
           y=int(input('Введите целое отрицательное число: '))))


def func_1(x, y):
    i = 0
    result = 1
    while y < i:
        result *= 1/x
        y += 1
    return result

print(func_1(x=float(input('Введите действительное положительное число: ')),
             y=int(input('Введите целое отрицательное число: '))))
