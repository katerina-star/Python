class StoreMachines:

    def __init__(self, name, price, quantity, number_of_lists, *args):
        self.name = name
        self.price = price
        self.quantity = quantity
        self.number = number_of_lists
        self.my_store_full = []
        self.my_store = []
        self.my_unit = {'Модель устройства': self.name, 'Цена за единицу': self.price, 'Количество': self.quantity}

    def __str__(self):
        return 'f {self.name} цена: {self.price} количество {self.quantity}'

    def reception(self):
        try:
            unit = input('Введите наименование: ')
            unit_p = int(input('Введите цену за единицу: '))
            unit_q = int(input('Введите количество: '))
            unique = {'Модель устройства': unit, 'Цена за единицу': unit_p, 'Количество': unit_q}
            self.my_unit.update(unique)
            self.my_store.append(self.my_unit)
            print(f'Текущий список: {self.my_store}')
        except:
            return 'Ошибка ввода данных'
        if input('Для выхода введите Q, для продолжения Enter: ').upper() == 'Q':
            self.my_store_full.append(self.my_store)
            print(f'Весь склад: {self.my_store_full}')
            return 'Вы вышли'
        else:
            return StoreMachines.reception(self)


class Printer(StoreMachines):
    def to_print(self):
        return f'Распечатать что-то {self.number} раз'


class Scanner(StoreMachines):
    def to_scan(self):
        return f'Просканировать что-то {self.number} раз'


class Copier(StoreMachines):
    def to_copier(self):
        return f'Отксерить что-то {self.number} раз'


unit_1 = Printer('Hp', 300, 5, 10)
unit_2 = Scanner('Canon', 2000, 5, 10)
unit_3 = Copier('Xerox', 1500, 3, 15)
print(unit_1.reception())
print(unit_1.to_print())
print(unit_2.to_scan())
print(unit_3.to_copier())
